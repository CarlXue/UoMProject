<head>
  <style>
      table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
      }
  </style>
</head>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table border= "1" style="border:1px solid grey;">
  <thead>
    <tr>
      <th>Product</th>
      <th>Product name</th>
      <th>Product description</th>
      <th>Product brand</th>
      <th>Product standard</th>
      <th>Cost aud</th>
      <th>Cost rmb</th>
      <th>Unit price aud</th>
      <th>Unit price rmb</th>
      <th>Margin aud</th>
      <th>Margin rmb</th>
      <th>Stock au</th>
      <th>Stock cn</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_id %></td>
        <td><%= product.product_name %></td>
        <td><%= product.product_description %></td>
        <td><%= product.product_brand %></td>
        <td><%= product.product_standard %></td>
        <td><%= product.cost_aud %></td>
        <td><%= product.cost_rmb %></td>
        <td><%= product.unit_price_aud %></td>
        <td><%= product.unit_price_rmb %></td>
        <td><%= product.margin_aud %></td>
        <td><%= product.margin_rmb %></td>
        <td><%= product.stock_au %></td>
        <td><%= product.stock_cn %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
