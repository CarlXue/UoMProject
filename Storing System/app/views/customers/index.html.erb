<head>
  <style>
      table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
      }
  </style>
</head>

<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Customer firstname</th>
      <th>Customer lastname</th>
      <th>Customer relationship</th>
      <th>Street number</th>
      <th>Street name</th>
      <th>District</th>
      <th>Province</th>
      <th>Postcode</th>
      <th>Mobile number</th>
      <th>Age group</th>
      <th>Gender</th>
      <th>Has child</th>
      <th>Child age group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.customer_id %></td>
        <td><%= customer.customer_firstName %></td>
        <td><%= customer.customer_lastName %></td>
        <td><%= customer.customer_relationship %></td>
        <td><%= customer.street_number %></td>
        <td><%= customer.street_name %></td>
        <td><%= customer.district %></td>
        <td><%= customer.province %></td>
        <td><%= customer.postcode %></td>
        <td><%= customer.mobile_number %></td>
        <td><%= customer.age_group %></td>
        <td><%= customer.gender %></td>
        <td><%= customer.has_child %></td>
        <td><%= customer.child_age_group %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
<%= link_to 'Home', home_index_path %>
